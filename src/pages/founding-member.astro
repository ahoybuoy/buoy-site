---
import Layout from '../layouts/Layout.astro'
import Nav from '../components/Nav.astro'
import Footer from '../components/Footer.astro'
import Button from '../components/Button.astro'
---

<Layout
  title="Founding Member | Buoy - Lock in $15/dev forever"
  description="Become a Buoy Founding Member. Lock in $15/dev/month forever - 40% off regular pricing. Your card won't be charged until we launch."
>
  <Nav />

  <!-- Hero -->
  <section class="relative pt-32 pb-16 overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-b from-navy-dark via-navy to-navy-dark"></div>

    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <div class="inline-flex items-center gap-2 px-3 py-1 bg-buoy/20 border border-buoy/30 rounded-full text-buoy text-sm mb-6">
        Limited Availability
      </div>
      <h1 class="text-4xl sm:text-5xl font-bold text-light mb-6">
        Become a Founding Member
      </h1>
      <p class="text-xl text-slate max-w-2xl mx-auto">
        Lock in <span class="text-buoy font-semibold">$15/dev/month</span> forever.
        <span class="line-through text-slate/50">$25</span>
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16 bg-navy">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-start">

        <!-- Left: Benefits -->
        <div>
          <h2 class="text-2xl font-bold text-light mb-6">What you get</h2>

          <div class="space-y-4 mb-8">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-success flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <div>
                <h3 class="font-semibold text-light">40% off forever</h3>
                <p class="text-sm text-slate">$15/dev/month instead of $25. Locked in for life.</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-success flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <div>
                <h3 class="font-semibold text-light">Full Team plan access</h3>
                <p class="text-sm text-slate">GitHub PR comments, Slack alerts, cloud history, Figma plugin.</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-success flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <div>
                <h3 class="font-semibold text-light">Early access</h3>
                <p class="text-sm text-slate">First to try new features as they ship.</p>
              </div>
            </div>

            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-success flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              <div>
                <h3 class="font-semibold text-light">Founding Member badge</h3>
                <p class="text-sm text-slate">Recognition in our community and changelog.</p>
              </div>
            </div>
          </div>

          <div class="bg-navy-dark border border-navy-light/20 rounded-xl p-4">
            <h3 class="font-semibold text-light mb-2 flex items-center gap-2">
              <span class="text-buoy">?</span> How it works
            </h3>
            <ol class="text-sm text-slate space-y-2 list-decimal list-inside">
              <li>Enter your email and team size</li>
              <li>Add your payment method (you won't be charged yet)</li>
              <li>We'll email you when our GitHub integration launches</li>
              <li>Your subscription starts at $15/dev/month - forever</li>
            </ol>
          </div>
        </div>

        <!-- Right: Form -->
        <div class="bg-navy-dark border border-buoy/30 rounded-2xl p-8">
          <h2 class="text-xl font-bold text-light mb-6 text-center">Reserve your spot</h2>

          <form id="founding-member-form" class="space-y-6">
            <div>
              <label for="email" class="block text-sm font-medium text-light mb-2">
                Work email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="you@company.com"
                class="w-full px-4 py-3 bg-navy border border-navy-light/30 rounded-lg text-light placeholder-slate/50 focus:outline-none focus:border-buoy"
              />
            </div>

            <div>
              <label for="seats" class="block text-sm font-medium text-light mb-2">
                Number of developers
              </label>
              <select
                id="seats"
                name="seats"
                class="w-full px-4 py-3 bg-navy border border-navy-light/30 rounded-lg text-light focus:outline-none focus:border-buoy"
              >
                <option value="1">1 developer - $15/mo</option>
                <option value="2">2 developers - $30/mo</option>
                <option value="3">3 developers - $45/mo</option>
                <option value="5">5 developers - $75/mo</option>
                <option value="10">10 developers - $150/mo</option>
                <option value="20">20+ developers - Contact us</option>
              </select>
            </div>

            <div class="bg-navy/50 border border-navy-light/20 rounded-lg p-4">
              <div class="flex justify-between items-center">
                <span class="text-slate">Your locked-in price</span>
                <span class="text-2xl font-bold text-buoy" id="price-display">$15/mo</span>
              </div>
              <p class="text-xs text-slate/70 mt-2">
                Card saved but not charged until launch
              </p>
            </div>

            <button
              type="submit"
              id="submit-btn"
              class="w-full py-3 px-6 bg-buoy text-navy-dark font-semibold rounded-lg hover:bg-buoy/90 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
            >
              Reserve Your Spot
            </button>

            <p class="text-xs text-slate/70 text-center">
              By continuing, you agree to our Terms of Service.
              <br />
              Cancel anytime before launch for a full refund.
            </p>
          </form>

          <div id="error-message" class="hidden mt-4 p-4 bg-error/10 border border-error/30 rounded-lg text-error text-sm">
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-16 bg-navy-dark">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-2xl font-bold text-light mb-8 text-center">Questions</h2>

      <div class="space-y-4">
        <details class="group bg-navy/50 border border-navy-light/20 rounded-xl">
          <summary class="flex items-center justify-between p-4 cursor-pointer list-none">
            <span class="font-medium text-light">When will I be charged?</span>
            <svg class="w-5 h-5 text-slate group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-4 pb-4 text-slate">
            Your card will only be charged when our GitHub integration launches (estimated 2-6 weeks). We'll email you before any charge.
          </div>
        </details>

        <details class="group bg-navy/50 border border-navy-light/20 rounded-xl">
          <summary class="flex items-center justify-between p-4 cursor-pointer list-none">
            <span class="font-medium text-light">Can I cancel?</span>
            <svg class="w-5 h-5 text-slate group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-4 pb-4 text-slate">
            Yes, anytime before launch for a full refund. After launch, you can cancel your subscription anytime (no refund for partial months).
          </div>
        </details>

        <details class="group bg-navy/50 border border-navy-light/20 rounded-xl">
          <summary class="flex items-center justify-between p-4 cursor-pointer list-none">
            <span class="font-medium text-light">Is the $15 price really forever?</span>
            <svg class="w-5 h-5 text-slate group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-4 pb-4 text-slate">
            Yes. As long as you maintain an active subscription, you'll always pay $15/dev/month. Even if we raise prices to $50 someday.
          </div>
        </details>

        <details class="group bg-navy/50 border border-navy-light/20 rounded-xl">
          <summary class="flex items-center justify-between p-4 cursor-pointer list-none">
            <span class="font-medium text-light">What if I need more seats later?</span>
            <svg class="w-5 h-5 text-slate group-open:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-4 pb-4 text-slate">
            Additional seats added later will be at the founding member rate ($15/dev) as long as you're a founding member.
          </div>
        </details>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  const form = document.getElementById('founding-member-form') as HTMLFormElement;
  const seatsSelect = document.getElementById('seats') as HTMLSelectElement;
  const priceDisplay = document.getElementById('price-display') as HTMLElement;
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const errorMessage = document.getElementById('error-message') as HTMLElement;

  // Update price display when seats change
  seatsSelect.addEventListener('change', () => {
    const seats = parseInt(seatsSelect.value);
    if (seats >= 20) {
      priceDisplay.textContent = 'Contact us';
    } else {
      priceDisplay.textContent = `$${seats * 15}/mo`;
    }
  });

  // Handle form submission
  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const seats = parseInt(seatsSelect.value);
    if (seats >= 20) {
      window.location.href = 'https://cal.com/tarre';
      return;
    }

    const email = (document.getElementById('email') as HTMLInputElement).value;

    submitBtn.disabled = true;
    submitBtn.textContent = 'Creating checkout...';
    errorMessage.classList.add('hidden');

    try {
      const response = await fetch('/api/create-checkout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ email, seats }),
      });

      const data = await response.json();

      if (!response.ok) {
        throw new Error(data.message || 'Failed to create checkout');
      }

      // Redirect to Stripe Checkout
      window.location.href = data.url;

    } catch (error) {
      errorMessage.textContent = error instanceof Error ? error.message : 'Something went wrong';
      errorMessage.classList.remove('hidden');
      submitBtn.disabled = false;
      submitBtn.textContent = 'Reserve Your Spot';
    }
  });
</script>
