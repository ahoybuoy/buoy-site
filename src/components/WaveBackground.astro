<style>
  .wave-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
    background: linear-gradient(
      180deg,
      #0a1628 0%,
      #0d1f35 30%,
      #0a1628 70%,
      #061018 100%
    );
  }

  /* Static SVG layer for stars, grid, and defs */
  .wave-svg-static {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  /* Wave containers - single wide SVG, no seams */
  .wave-container {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 200%;
    height: 100%;
    will-change: transform;
  }

  .wave-svg-wide {
    width: 100%;
    height: 100%;
    display: block;
  }

  /* Animate each wave container */
  .wave-container-1 {
    animation: waveScroll 25s linear infinite;
    z-index: 2;
  }

  .wave-container-2 {
    animation: waveScroll 20s linear infinite reverse;
    z-index: 3;
  }

  .wave-container-3 {
    animation: waveScroll 15s linear infinite;
    z-index: 4;
  }

  @keyframes waveScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Grid animation */
  .grid-lines line {
    animation: gridPulse 4s ease-in-out infinite;
  }

  .grid-lines line:nth-child(2) { animation-delay: 0.5s; }
  .grid-lines line:nth-child(3) { animation-delay: 1s; }
  .grid-lines line:nth-child(4) { animation-delay: 1.5s; }
  .grid-lines line:nth-child(5) { animation-delay: 2s; }

  @keyframes gridPulse {
    0%, 100% { opacity: 0.1; }
    50% { opacity: 0.25; }
  }

  /* Floating particles */
  .particles {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
    clip-path: inset(0 0 0 0);
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(0, 102, 255, 0.6);
    border-radius: 50%;
    animation: float 20s linear infinite;
  }

  .p1 { left: 10%; bottom: 0; animation-delay: 0s; animation-duration: 25s; }
  .p2 { left: 20%; bottom: 0; animation-delay: -5s; animation-duration: 20s; background: rgba(139, 92, 246, 0.5); }
  .p3 { left: 35%; bottom: 0; animation-delay: -10s; animation-duration: 22s; }
  .p4 { left: 50%; bottom: 0; animation-delay: -3s; animation-duration: 18s; background: rgba(249, 115, 22, 0.4); }
  .p5 { left: 65%; bottom: 0; animation-delay: -8s; animation-duration: 24s; background: rgba(139, 92, 246, 0.5); }
  .p6 { left: 75%; bottom: 0; animation-delay: -12s; animation-duration: 21s; }
  .p7 { left: 85%; bottom: 0; animation-delay: -2s; animation-duration: 19s; background: rgba(249, 115, 22, 0.4); }
  .p8 { left: 95%; bottom: 0; animation-delay: -7s; animation-duration: 23s; }

  @keyframes float {
    0% {
      transform: translateY(0) scale(0);
      opacity: 0;
    }
    5% {
      opacity: 1;
      transform: translateY(-20px) scale(1);
    }
    95% {
      opacity: 1;
      transform: translateY(-45vh) scale(1);
    }
    100% {
      transform: translateY(-50vh) scale(0);
      opacity: 0;
    }
  }

  /* Twinkling stars */
  .star {
    fill: rgba(255, 255, 255, 0.6);
    animation: twinkle 4s ease-in-out infinite;
  }

  .star:nth-child(2n) { animation-delay: -1s; animation-duration: 3.5s; }
  .star:nth-child(3n) { animation-delay: -2s; animation-duration: 4.5s; }
  .star:nth-child(5n) { animation-delay: -0.5s; animation-duration: 5s; }
  .star:nth-child(7n) { animation-delay: -3s; animation-duration: 3s; }

  @keyframes twinkle {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.8; }
  }

  /* Mesh gradient overlay */
  .mesh-overlay {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse at 20% 20%, rgba(0, 102, 255, 0.1) 0%, transparent 50%),
      radial-gradient(ellipse at 80% 30%, rgba(139, 92, 246, 0.08) 0%, transparent 50%),
      radial-gradient(ellipse at 40% 80%, rgba(249, 115, 22, 0.06) 0%, transparent 40%),
      radial-gradient(ellipse at 90% 80%, rgba(0, 102, 255, 0.08) 0%, transparent 50%);
    pointer-events: none;
  }

  /* Noise texture overlay — use large tile to avoid visible repeat seams */
  .wave-background::after {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 1024 1024' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='n'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23n)'/%3E%3C/svg%3E");
    background-size: 1024px 1024px;
    opacity: 0.03;
    pointer-events: none;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    /* Remove expensive SVG blur filters on mobile */
    .wave-svg-wide path {
      filter: none !important;
    }

    /* Kill particles entirely on mobile */
    .particles {
      display: none;
    }

    /* Static stars — no twinkling */
    .star {
      animation: none;
      opacity: 0.45;
    }

    /* Static grid — no pulsing */
    .grid-lines line {
      animation: none;
    }

    /* Keep wave containers at 200% — enough for seamless loop */
    .wave-container {
      height: 105%;
      width: 200%;
    }
  }

  /* =============================================
     Light mode — daytime ocean scene
     ============================================= */

  :global(html.light) .wave-background {
    background: linear-gradient(
      180deg,
      #2E6DB4 0%,    /* deep rich sky at zenith */
      #4A90D4 15%,   /* mid sky */
      #7AB8E8 35%,   /* lighter sky */
      #AEDAF5 52%,   /* hazy near horizon — sky lightens toward horizon */
      #1A7EC8 60%,   /* ocean surface */
      #0E5FA0 78%,   /* mid ocean */
      #0A3D7A 100%   /* deep ocean */
    );
  }

  /* Natural ocean wave fills — lightened */
  :global(html.light) .wave-container-1 svg path {
    fill: rgba(255, 255, 255, 0.32) !important;
    filter: none;
  }
  :global(html.light) .wave-container-2 svg path {
    fill: rgba(50, 150, 220, 0.30) !important;
    filter: none;
  }
  :global(html.light) .wave-container-3 svg path {
    fill: rgba(30, 115, 190, 0.38) !important;
    filter: none;
  }

  /* Hide stars and dark grid in daylight */
  :global(html.light) .stars {
    display: none;
  }
  :global(html.light) .grid-lines {
    display: none;
  }

  /* White water sparkle particles */
  :global(html.light) .particle {
    background: rgba(255, 255, 255, 0.65);
  }

  /* Sun high right, warm shimmer on water */
  :global(html.light) .mesh-overlay {
    background:
      radial-gradient(ellipse at 75% 8%, rgba(255, 245, 200, 0.45) 0%, transparent 35%),
      radial-gradient(ellipse at 50% 62%, rgba(255, 255, 255, 0.18) 0%, transparent 40%),
      radial-gradient(ellipse at 20% 70%, rgba(14, 120, 200, 0.15) 0%, transparent 45%);
  }

  /* Reduce noise in light mode */
  :global(html.light) .wave-background::after {
    opacity: 0.015;
  }

  /* Clouds */
  .clouds {
    display: none;
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  :global(html.light) .clouds {
    display: block;
  }

  .cloud {
    position: absolute;
    will-change: transform;
    filter: blur(3px);
  }

  .cloud-1 {
    top: 12%;
    left: -18%;
    width: 300px;
    opacity: 0.45;
    animation: cloudDrift 110s linear infinite;
  }
  .cloud-2 {
    top: 22%;
    left: -10%;
    width: 210px;
    opacity: 0.35;
    animation: cloudDrift 145s linear infinite;
    animation-delay: -55s;
  }
  .cloud-3 {
    top: 14%;
    left: -8%;
    width: 160px;
    opacity: 0.30;
    animation: cloudDrift 90s linear infinite;
    animation-delay: -30s;
  }
  .cloud-4 {
    top: 28%;
    left: -5%;
    width: 115px;
    opacity: 0.28;
    animation: cloudDrift 125s linear infinite;
    animation-delay: -80s;
  }

  @keyframes cloudDrift {
    from { transform: translateX(0); }
    to   { transform: translateX(115vw); }
  }

  /* No clouds on mobile — performance */
  @media (max-width: 768px) {
    .clouds {
      display: none !important;
    }
  }
</style>
