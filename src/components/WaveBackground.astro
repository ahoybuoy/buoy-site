---
// Paper cutout wave background - handmade aesthetic
---

<div class="wave-background">
  <!-- Paper Wave Layers - stacked like cardboard cutouts -->
  <div class="paper-waves">
    <!-- Back wave - deepest layer -->
    <div class="paper-wave wave-back">
      <svg viewBox="0 0 1440 400" preserveAspectRatio="none" class="wave-svg">
        <defs>
          <filter id="paper-texture-1">
            <feTurbulence type="fractalNoise" baseFrequency="0.04" numOctaves="5" result="noise"/>
            <feDiffuseLighting in="noise" lighting-color="#0066FF" surfaceScale="1.5" result="light">
              <feDistantLight azimuth="45" elevation="60"/>
            </feDiffuseLighting>
            <feComposite in="SourceGraphic" in2="light" operator="arithmetic" k1="1" k2="0" k3="0" k4="0"/>
          </filter>
        </defs>
        <!-- Jagged paper-cut wave shape -->
        <path
          class="wave-path"
          d="M0,120
             L80,100 L120,130 L180,95 L240,125 L300,90 L360,120
             L420,85 L480,115 L540,80 L600,110 L660,75 L720,105
             L780,70 L840,100 L900,65 L960,95 L1020,60 L1080,90
             L1140,55 L1200,85 L1260,50 L1320,80 L1380,45 L1440,75
             L1440,400 L0,400 Z"
        />
      </svg>
    </div>

    <!-- Middle wave -->
    <div class="paper-wave wave-middle">
      <svg viewBox="0 0 1440 400" preserveAspectRatio="none" class="wave-svg">
        <path
          class="wave-path"
          d="M0,140
             L60,160 L100,135 L160,165 L220,130 L280,160 L340,125
             L400,155 L460,120 L520,150 L580,115 L640,145 L700,110
             L760,140 L820,105 L880,135 L940,100 L1000,130 L1060,95
             L1120,125 L1180,90 L1240,120 L1300,85 L1360,115 L1440,95
             L1440,400 L0,400 Z"
        />
      </svg>
    </div>

    <!-- Front wave - closest layer -->
    <div class="paper-wave wave-front">
      <svg viewBox="0 0 1440 400" preserveAspectRatio="none" class="wave-svg">
        <path
          class="wave-path"
          d="M0,180
             L70,200 L130,170 L190,205 L250,165 L310,195 L370,160
             L430,190 L490,155 L550,185 L610,150 L670,180 L730,145
             L790,175 L850,140 L910,170 L970,135 L1030,165 L1090,130
             L1150,160 L1210,125 L1270,155 L1330,120 L1390,150 L1440,130
             L1440,400 L0,400 Z"
        />
      </svg>
    </div>
  </div>

  <!-- Subtle paper grain overlay -->
  <div class="paper-grain"></div>
</div>

<style>
  .wave-background {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
    background: linear-gradient(
      180deg,
      #0a1628 0%,
      #0d1f35 40%,
      #0a1628 100%
    );
  }

  .paper-waves {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60%;
  }

  .paper-wave {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100%;
  }

  .wave-svg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Back wave - blue/purple tones */
  .wave-back {
    z-index: 1;
    filter: drop-shadow(0 -8px 16px rgba(0, 0, 0, 0.3));
    animation: paperSway 8s ease-in-out infinite;
  }

  .wave-back .wave-path {
    fill: rgba(30, 58, 95, 0.9);
  }

  /* Middle wave - purple tones */
  .wave-middle {
    z-index: 2;
    filter: drop-shadow(0 -6px 12px rgba(0, 0, 0, 0.25));
    animation: paperSway 7s ease-in-out infinite;
    animation-delay: -2s;
  }

  .wave-middle .wave-path {
    fill: rgba(45, 55, 85, 0.92);
  }

  /* Front wave - warmest, most visible */
  .wave-front {
    z-index: 3;
    filter: drop-shadow(0 -4px 8px rgba(0, 0, 0, 0.2));
    animation: paperSway 6s ease-in-out infinite;
    animation-delay: -4s;
  }

  .wave-front .wave-path {
    fill: rgba(20, 40, 70, 0.95);
  }

  /* Subtle paper sway - like cardboard gently moving */
  @keyframes paperSway {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-3px) rotate(0.1deg);
    }
  }

  /* Paper grain texture overlay */
  .paper-grain {
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0.06;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='grain'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23grain)'/%3E%3C/svg%3E");
  }

  /* Add subtle "torn edge" effect to waves */
  .wave-back::after,
  .wave-middle::after,
  .wave-front::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    pointer-events: none;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='rough'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.5' numOctaves='3'/%3E%3CfeDisplacementMap in='SourceGraphic' scale='2'/%3E%3C/filter%3E%3C/svg%3E");
    opacity: 0.02;
  }

  /* Color accents on wave edges */
  .wave-back .wave-path {
    stroke: rgba(0, 102, 255, 0.3);
    stroke-width: 2;
  }

  .wave-middle .wave-path {
    stroke: rgba(139, 92, 246, 0.25);
    stroke-width: 2;
  }

  .wave-front .wave-path {
    stroke: rgba(249, 115, 22, 0.2);
    stroke-width: 2;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .paper-waves {
      height: 50%;
    }
  }
</style>
