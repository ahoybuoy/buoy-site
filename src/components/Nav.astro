---
import { siteConfig } from '../config'
---

<nav class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-navy-dark/80 border-b border-navy-light/20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 group">
        <span class="text-2xl transition-transform group-hover:scale-110">ðŸ›Ÿ</span>
        <span class="text-xl font-bold font-[Satoshi] text-light">Buoy</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-6">
        <a href="/#features" class="text-sm text-slate hover:text-light transition-colors duration-200 py-4">
          Features
        </a>
        <a href={siteConfig.githubUrl} target="_blank" rel="noopener noreferrer" class="text-sm text-slate hover:text-light transition-colors duration-200 py-4">
          Docs
        </a>
        <a href={siteConfig.githubUrl} target="_blank" rel="noopener noreferrer" class="text-sm text-slate hover:text-light transition-colors duration-200 py-4 flex items-center gap-1">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z"/>
          </svg>
          GitHub
        </a>
      </div>

      <!-- CTA Button -->
      <div class="hidden md:flex items-center">
        <a
          href={siteConfig.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="px-4 py-2 text-sm font-medium bg-buoy text-navy-dark rounded-lg hover:bg-buoy-light transition-all duration-200 glow-buoy hover:scale-105"
        >
          Get Started
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="md:hidden p-2 text-slate hover:text-light"
        aria-label="Open menu"
        id="mobile-menu-button"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="hidden md:hidden" id="mobile-menu">
    <div class="px-4 py-4 bg-navy border-t border-navy-light/20">
      <a href="/#features" class="block px-4 py-2 text-sm text-slate hover:text-light hover:bg-navy-light/20 rounded-lg transition-colors">
        Features
      </a>
      <a href={siteConfig.githubUrl} target="_blank" rel="noopener noreferrer" class="block px-4 py-2 text-sm text-slate hover:text-light hover:bg-navy-light/20 rounded-lg transition-colors">
        Docs
      </a>
      <a href={siteConfig.githubUrl} target="_blank" rel="noopener noreferrer" class="block px-4 py-2 text-sm text-slate hover:text-light hover:bg-navy-light/20 rounded-lg transition-colors">
        GitHub
      </a>

      <!-- CTA -->
      <div class="pt-4 mt-4 border-t border-navy-light/20">
        <a
          href={siteConfig.githubUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full px-4 py-2 text-center font-medium bg-buoy text-navy-dark rounded-lg"
        >
          Get Started
        </a>
      </div>
    </div>
  </div>
</nav>

<script>
  const button = document.getElementById('mobile-menu-button')
  const menu = document.getElementById('mobile-menu')

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden')
  })
</script>
